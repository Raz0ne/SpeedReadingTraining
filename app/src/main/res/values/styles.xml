<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Base.TextAppearance.AppCompat.Button.Light"
        parent="TextAppearance.AppCompat.Button" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="iconPadding">0dp</item>
        <item name="iconTint">@color/brown</item>
        <item name="android:textSize">@dimen/button_normal_text</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/brown</item>
        <item name="android:backgroundTint">@color/white_yellow</item>
        <item name="android:layout_marginVertical">@dimen/button_vertical_margin</item>
        <item name="android:layout_marginHorizontal">@dimen/button_horizontal_margin</item>
    </style>

    <style name="TimePickerTheme"
        parent="android:Widget.Material.TimePicker">
        <item name="android:numbersSelectorColor">@color/purple_200</item>
    </style>
</resources>